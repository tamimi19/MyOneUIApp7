<?xml version="1.0" encoding="utf-8"?>
<dev.oneuiproject.oneui.layout.DrawerLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:expanded="false">

    <!-- المحتوى الرئيسي -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_location="main_content">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            style="?attr/appBarLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:seslUseCustomHeight="true"
            app:seslHeightProportion="0.5">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                style="?attr/collapsingToolbarLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="exitUntilCollapsed|scroll"
                app:expandedTitleMarginStart="24dp"
                app:expandedTitleMarginBottom="48dp">

                <LinearLayout
                    android:id="@+id/header_big_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="?attr/actionBarSize"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="32dp"
                    app:isCustomTitle="true">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/header_app_icon"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@mipmap/ic_launcher"
                        android:antialias="true" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="@string/app_name"
                        android:textSize="30sp"
                        android:textColor="?android:attr/textColorPrimary"
                        android:fontFamily="sans-serif-light" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/header_app_subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="@string/app_subtitle"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorSecondary" />

                </LinearLayout>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:background="@android:color/transparent"
                    app:layout_collapseMode="pin" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <!-- Toolbar ثابت يظهر عند شاشة الإعدادات -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_fixed"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:background="@android:color/transparent"
            android:visibility="gone" />



        <LinearLayout
            android:id="@+id/bottom_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <FrameLayout
                android:id="@+id/main_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <!-- swipe up container: السهم في سطر منفصل والنص يتبع strings.xml -->
        <FrameLayout
            android:id="@+id/swipe_up_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:focusable="false"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingBottom="64dp">

                <!-- السهم في سطر منفصل ومركّز -->
                <TextView
                    android:id="@+id/swipe_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⬆"
                    android:textSize="31sp"
                    android:textAlignment="center"
                    android:alpha="0.8" />

                <!-- النص في السطر التالي: استخدم مورد السلسلة ليتبع لغة النظام -->
                <TextView
                    android:id="@+id/swipe_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/swipe_up"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:alpha="0.6"
                    android:textDirection="locale"/>

            </LinearLayout>
        </FrameLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- درج التنقل -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/drawer_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:paddingTop="64dp"
        android:clipToPadding="false"
        app:layout_location="drawer_panel" />

</dev.oneuiproject.oneui.layout.DrawerLayout>
