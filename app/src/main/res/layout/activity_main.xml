<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- شريط التطبيق القابل للانهيار -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <!-- شريط الأدوات (Toolbar) -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- المحتوى الأصلي ضمن NestedScrollView -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- العنوان (مقتبس من الملف الأصلي) -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_features"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginBottom="16dp" />

            <!-- نصوص المميزات (احتفظت بالمحتوى الأصلي) -->
            <TextView
                android:id="@+id/text_feature_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feature1"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/text_feature_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feature2"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/text_feature_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feature3"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/text_feature_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feature4"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
