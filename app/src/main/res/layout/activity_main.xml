<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- reusable collapsing toolbar -->
    <include layout="@layout/base_collapsing_toolbar"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_features"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/text_feature_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feature1"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/text_feature_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feature2"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/text_feature_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feature3"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/text_feature_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feature4"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
