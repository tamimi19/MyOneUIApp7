<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <dev.oneuiproject.oneui.widget.Separator
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Main Features" />

        <dev.oneuiproject.oneui.widget.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Feature 1 (title - large, white, heavier font) -->
                <TextView
                    android:id="@+id/text_feature_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/feature1"
                    android:textColor="attr/textColorSecondary"
                    android:textSize="10sp"
                    android:fontFamily="roboto"
                    android:textStyle="regular"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:background="?attr/selectableItemBackground" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="?android:attr/listDivider" />

                <!-- Feature 2 (title) -->
                <TextView
                    android:id="@+id/text_feature_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/feature2"
                    android:textColor="attr/textColorSecondary"
                    android:textSize="10sp"
                    android:fontFamily="roboto"
                    android:textStyle="regular"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:background="?attr/selectableItemBackground" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="?android:attr/listDivider" />

                <!-- Feature 3 (title) -->
                <TextView
                    android:id="@+id/text_feature_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/feature3"
                    android:textColor="attr/textColorSecondary"
                    android:textSize="10sp"
                    android:fontFamily="roboto"
                    android:textStyle="regular"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:background="?attr/selectableItemBackground" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="?android:attr/listDivider" />

                <!-- Feature 4 (title) -->
                <TextView
                    android:id="@+id/text_feature_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/feature4"
                    android:textColor="attr/textColorSecondary"
                    android:textSize="10sp"
                    android:fontFamily="roboto"
                    android:textStyle="regular"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:background="?attr/selectableItemBackground" />

            </LinearLayout>

        </dev.oneuiproject.oneui.widget.RoundLinearLayout>

        <dev.oneuiproject.oneui.widget.Separator
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About" />

        <dev.oneuiproject.oneui.widget.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <!-- About text: smaller and darker -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is a demo app to showcase the One UI design."
                android:textColor="?android:"@android:color/white"
                android:textSize="18sp"
                android:padding="16dp" />

        </dev.oneuiproject.oneui.widget.RoundLinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
