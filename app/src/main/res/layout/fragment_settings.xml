<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/settings_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/title_settings"
            app:titleTextColor="?android:attr/textColorPrimary" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="always"
        android:scrollbars="vertical"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="1dp"
            android:paddingEnd="1dp"
            android:paddingTop="9dp"
            android:paddingBottom="9dp">

            <!-- عنوان قسم Appearance - تمت إضافة paddingStart للمحاذاة -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_appearance"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                android:fontFamily="sans-serif-medium"
                android:paddingStart="17dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <!-- تم تقليل المسافة السفلية من 20dp إلى 12dp -->
            <dev.oneuiproject.oneui.widget.RoundLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/oui_background_color"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:id="@+id/language_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="@drawable/drawer_item_list_ripple"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- يمكنك تغيير اللون هنا، مثلاً: android:textColor="#2196F3" للأزرق -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_language"
                            android:textSize="17sp"
                            android:textColor="?android:attr/textColorPrimary"
                            android:fontFamily="sans-serif" />

                        <!-- يمكنك تغيير اللون هنا، مثلاً: android:textColor="#757575" للرمادي -->
                        <TextView
                            android:id="@+id/language_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_language_system"
                            android:textSize="14sp"
                            android:textColor="#4A8FE9"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:id="@+id/theme_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="@drawable/drawer_item_list_ripple"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_theme"
                            android:textSize="17sp"
                            android:textColor="?android:attr/textColorPrimary"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/theme_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_theme_system"
                            android:textSize="14sp"
                            android:textColor="#4A8FE9"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                </LinearLayout>

            </dev.oneuiproject.oneui.widget.RoundLinearLayout>

            <!-- عنوان قسم Notifications - تمت إضافة paddingStart للمحاذاة -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_notifications_section"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                android:fontFamily="sans-serif-medium"
                android:paddingStart="17dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <!-- تم تقليل المسافة السفلية من 20dp إلى 12dp -->
            <dev.oneuiproject.oneui.widget.RoundLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/oui_background_color"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:id="@+id/notifications_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="@drawable/drawer_item_list_ripple"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/settings_notifications"
                        android:textSize="17sp"
                        android:textColor="?android:attr/textColorPrimary"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

            </dev.oneuiproject.oneui.widget.RoundLinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
