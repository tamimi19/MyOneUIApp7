<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- تم حذف AppBarLayout و Toolbar بالكامل -->
    <!-- العنوان الكبير والعنوان الفرعي سيتم التحكم بهما من خلال DrawerLayout برمجياً -->

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="1dp"
            android:paddingEnd="1dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp">

            <!-- عنوان قسم Appearance - محاذي مع النص داخل البطاقات -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_appearance"
                android:textSize="13sp"
                android:textColor="?android:attr/textColorSecondary"
                android:fontFamily="sans-serif-medium"
                android:paddingStart="25dp"
                android:paddingTop="4dp"
                android:layout_marginBottom="6dp" />

            <!-- بطاقة Appearance -->
            <dev.oneuiproject.oneui.widget.RoundLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/oui_background_color"
                android:layout_marginBottom="3dp">

                <LinearLayout
                    android:id="@+id/language_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:background="@drawable/drawer_item_list_ripple"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_language"
                            android:textSize="17sp"
                            android:textColor="?android:attr/textColorPrimary"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/language_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_language_system"
                            android:textSize="13sp"
                            android:textColor="#4A8FE9"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- خط فاصل بين العناصر -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:id="@+id/theme_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:background="@drawable/drawer_item_list_ripple"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_theme"
                            android:textSize="17sp"
                            android:textColor="?android:attr/textColorPrimary"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/theme_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_theme_system"
                            android:textSize="13sp"
                            android:textColor="#4A8FE9"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                </LinearLayout>

            </dev.oneuiproject.oneui.widget.RoundLinearLayout>

            <!-- عنوان قسم Notifications -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_notifications_section"
                android:textSize="13sp"
                android:textColor="?android:attr/textColorSecondary"
                android:fontFamily="sans-serif-medium"
                android:paddingStart="25dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="6dp" />

            <!-- بطاقة Notifications -->
            <dev.oneuiproject.oneui.widget.RoundLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/oui_background_color"
                android:layout_marginBottom="3dp">

                <LinearLayout
                    android:id="@+id/notifications_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:background="@drawable/drawer_item_list_ripple"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/settings_notifications"
                        android:textSize="17sp"
                        android:textColor="?android:attr/textColorPrimary"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

            </dev.oneuiproject.oneui.widget.RoundLinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
