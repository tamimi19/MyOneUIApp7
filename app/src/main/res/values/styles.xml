<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="OneUITheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Ripple / highlight used by drawables -->
        <item name="colorControlHighlight">@color/oui_highlight</item>

        <!-- Background color used by One UI drawables in this project -->
        <item name="oui_background_color">@color/oui_background_color</item>

        <!-- Surface / text colors -->
        <item name="android:colorBackground">@color/oui_background_color</item>
        <item name="android:textColorPrimary">@color/colorOnSurface</item>
    </style>
</resources>
