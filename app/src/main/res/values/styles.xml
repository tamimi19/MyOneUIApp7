<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- OneUITheme should match the name you put in AndroidManifest.xml -->
    <style name="OneUITheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#15202B</item>
        <item name="colorPrimaryDark">#0F1720</item>
        <item name="colorAccent">#0A84FF</item>
        <item name="android:statusBarColor">#0F1720</item>
    </style>

    <!-- Expanded and collapsed title appearances to mimic One UI -->
    <style name="ExpandedTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="CollapsedTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

</resources>
