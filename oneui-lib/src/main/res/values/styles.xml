<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OneUI" />

    <!-- RelatedCard -->
    <style name="OneUI.RelativeLinkTitleTextStyle">
        <item name="android:textSize">@dimen/oui_relative_link_title_text_size</item>
        <item name="android:textColor">@color/oui_relative_link_title_text_color</item>
        <item name="android:fontFamily">@string/sesl_font_family_regular</item>
    </style>

    <style name="OneUI.RelativeLinkTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/oui_relative_link_item_background</item>
        <item name="android:textAppearance">@style/OneUI.RelativeLinkTextViewTextStyle</item>
    </style>

    <style name="OneUI.RelativeLinkTextViewTextStyle">
        <item name="android:textSize">@dimen/oui_relative_link_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:fontFamily">@string/sesl_font_family_regular</item>
    </style>

    <!-- UnclickablePreference -->
    <style name="OneUI.UnclickablePreferenceTextStyle">
        <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/oui_unclickablepref_text_color</item>
        <item name="android:textColorHighlight">?android:attr/colorControlHighlight</item>
        <item name="android:textColorLink">@color/oui_unclickablepref_link_text_color</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:fontFamily">@string/sesl_font_family_regular</item>
    </style>

    <!-- ToolbarLayout -->
    <style name="OneUI.MultiSelectionCheckboxTextStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/oui_primary_text_color</item>
        <item name="android:fontFamily">@string/sesl_font_family_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- AppInfoLayout -->
    <style name="OneUI.AppInfoButton" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/oui_btn_app_info</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/oui_appinfolayout_button_default_text</item>
        <item name="android:fontFamily">sec-roboto-light</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Buttons -->
    <style name="OneUI.ButtonStyleColored" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/oui_btn_colored_background</item>
    </style>

    <style name="OneUI.ButtonStyleTransparent" parent="Widget.AppCompat.Light.Button">
        <item name="android:background">@drawable/oui_btn_transparent</item>
    </style>

    <style name="OneUI.ButtonStyleOutline" parent="Widget.AppCompat.Light.Button">
        <item name="android:background">@drawable/oui_btn_outline</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:minWidth">196dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:paddingStart">16.5dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingEnd">16.5dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:textColor">@color/oui_btn_text_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- TipsCardPreference -->
    <style name="OneUI.TipsCardTextButtonStyle" parent="@android:style/Widget">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/oui_preference_tipscard_button_bg</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/oui_primary_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@string/sesl_font_family_regular</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- TipPopup -->
    <style name="OneUI.TipPopupButtonStyle" parent="@android:style/Widget">
        <item name="android:textAppearance">@style/OneUI.TipPopupButtonTextStyle</item>
        <item name="android:background">@drawable/sem_tip_popup_btn_borderless</item>
        <item name="android:minWidth">@dimen/sem_tip_popup_balloon_button_minwidth</item>
        <item name="android:minHeight">@dimen/sem_tip_popup_balloon_button_minheight</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="OneUI.TipPopupButtonTextStyle" parent="@android:style/Widget">
        <item name="android:textSize">@dimen/sem_tip_popup_balloon_action_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/sem_tip_popup_text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sec-medium</item>
    </style>

    <style name="OneUI.TipPopupTextStyle" parent="@android:style/Widget">
        <item name="android:textSize">@dimen/sem_tip_popup_balloon_message_text_size</item>
        <item name="android:textColor">@color/sem_tip_popup_text_color</item>
        <item name="android:fontFamily">sec</item>
    </style>

</resources>