<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="24dp"
    android:background="@color/oui_tipscardpref_bg_color"
    android:foreground="?attr/listChoiceBackgroundIndicator"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tips_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="20dp"
        android:paddingBottom="8dp"
        android:visibility="gone">

        <TextView
            android:id="@android:id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="22dp"
            android:textSize="19sp"
            android:textColor="@color/oui_primary_text_color"
            android:textStyle="bold"
            android:fontFamily="@string/sesl_font_family_regular" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tips_cancel_button"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/oui_preference_tipscard_close"
            android:visibility="gone"/>

    </RelativeLayout>

    <TextView
        android:id="@android:id/summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/oui_primary_text_color"
        android:textSize="15sp"
        android:lineSpacingExtra="4dp" />

    <View
        android:id="@+id/tips_empty_bottom"
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <LinearLayout
        android:id="@+id/tips_bottom_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:paddingHorizontal="12dp"
        android:paddingTop="4dp"
        android:layout_gravity="end"
        android:orientation="horizontal"
        android:visibility="gone" />

</LinearLayout>