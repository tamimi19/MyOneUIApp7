<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="70dp">

    <androidx.appcompat.widget.SeslProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:indeterminateOnly="true"
        android:minWidth="55dp"
        android:minHeight="55dp"
        android:maxWidth="60dp"
        android:maxHeight="60dp" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:maxWidth="40dp"
        android:textSize="@dimen/sesl_progress_dialog_circle_message_text_size"
        android:textColor="@color/oui_progress_dialog_text_color"
        android:fontFamily="@string/sesl_font_family_regular"
        android:singleLine="true"
        android:visibility="gone" />

</FrameLayout>